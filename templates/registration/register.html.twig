																																																				<button class="py-2 px-8 flex items-center justify-center bg-primary-500 rounded-md mt-8 text-white shadow-md font-bold" type="submit">Créer le compte</button>
																																																
																																																			</div>
																																																
																																																			<p class="text-secondary-500 mt-4">
																																																				Si vous avez déjà un compte ?
																																																				<a href="{{ path('app_login') }}" class="text-secondary-500 font-bold underline">Connectez-vous ici</a>
																																																			</p>
																																																		</form> #}
	</div>
{% endblock %}
