{% set currentRoute = app.request.pathinfo %}

<div class="flex items-center justify-center">
	<div class="overflow-hidden rounded-lg border border-stroke bg-white shadow-default p-4 w-full">
		{{ form_start(form, {"attr": {"class": "flex-1 flex flex-col items-center justify-center gap-4"}}) }}
		<div class="flex flex-col gap-2 w-full">
			<div class="flex flex-col gap-1 w-full">
				<div class="relative">
					{{ form_label(form.lastname, "Nom") }}
				</div>

				{{ form_widget(form.lastname, {"attr": {"class": "pl-2 rounded-md w-full border-primary-500"}}) }}
			</div>

			<div class="flex flex-col gap-1 w-full">
				<div class="relative">
					{{ form_label(form.firstname, "Prénom") }}
				</div>

				{{ form_widget(form.firstname, {"attr": {"class": "pl-2 rounded-md w-full border-primary-500"}}) }}
			</div>

			<div class="flex flex-col gap-1 w-full">
				<div class="relative">
					{{ form_label(form.address, "Addresse") }}
				</div>

				{{ form_widget(form.address, {"attr": {"class": "p-2 rounded-md w-full border-primary-500"}}) }}
			</div>

			<div class="flex flex-col gap-1 w-full">
				<div class="relative">
					{{ form_label(form.email, "Email") }}
				</div>

				{{ form_widget(form.email, {"attr": {"class": "pl-2 rounded-md w-full border-primary-500"}}) }}
			</div>

			<div class="flex flex-col gap-1 w-full">
				<div class="relative">
					{{ form_label(form.phone, "Numéro de téléphone") }}
				</div>

				{{ form_widget(form.phone, {"attr": {"class": "pl-2 rounded-md w-full border-primary-500"}}) }}
			</div>
		</div>


		<div class="flex flex-col md:flex-row md:gap-2">
			<button class="py-2 px-8 flex items-center justify-center bg-primary-500 rounded-md mt-8 text-white shadow-md font-bold" type="submit">{{ button_label|default('Créer') }}</button>
		</div>
		{{ form_end(form) }}
	</div>
</div>
