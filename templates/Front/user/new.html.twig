{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    {{ form_start(form) }}
<br>
        {{ form_row(form.email)}}
        {{ form_row(form.roles)}}
        {{ form_row ( form.plainPassword.first, {
                label: 'Password'
        }) }}
        {{ form_row ( form.plainPassword.second, {
                label: 'Password'
        }) }}
    <button class="btn">{{ button_label|default('Save user') }}</button>
{{ form_end(form) }}

    <a href="{{ path('front_user_index') }}">back to list</a>
{% endblock %}
