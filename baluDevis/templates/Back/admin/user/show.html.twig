{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr> 
            <tr>
                <th>Email</th>
                {% for role in user.roles  %}
                <td>{{ user.role }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>


    <a href="{{ path('back_admin_user_edit', {'id': user.id}) }}">edit</a>


{% endblock %}
