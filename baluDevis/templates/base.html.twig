                    <li class="nav-item"><a href="{{path('app_home')}}" class="nav-link link-body-emphasis px-2 active" aria-current="page">Home</a></li>
                </ul>
                <ul class="nav">
                    <li class="nav-item"><a href="{{path('app_logout')}}" class="nav-link link-body-emphasis px-2">Log out</a></li>
                </ul>
            </div> 
        {% else %}
         <div class="container d-flex flex-wrap">
                <ul class="nav me-auto">
                    <li class="nav-item"><a href="{{path('app_home')}}" class="nav-link link-body-emphasis px-2 active" aria-current="page">Home</a></li>
                </ul>
                <ul class="nav">
                    <li class="nav-item"><a href="{{path('app_login')}}" class="nav-link link-body-emphasis px-2">Login</a></li>
                    <li class="nav-item"><a href="{{path('app_register')}}" class="nav-link link-body-emphasis px-2">Register</a></li>
                </ul>
            </div> 
        {% endif %}
        {% endblock %}
    </body>
    
