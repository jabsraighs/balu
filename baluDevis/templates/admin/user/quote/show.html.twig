{% extends 'base.html.twig' %}

{% block title %}Quote{% endblock %}

{% block body %}
    <h1>Quote</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quote.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ quote.createdAt ? quote.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ExpiryAt</th>
                <td>{{ quote.expiryAt ? quote.expiryAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ quote.status }}</td>
            </tr>
            <tr>
                <th>TotalAmount</th>
                <td>{{ quote.totalAmount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_quote_index') }}">back to list</a>

    <a href="{{ path('app_admin_user_quote_edit', {'id': quote.id}) }}">edit</a>

    {{ include('admin/user/quote/_delete_form.html.twig') }}
{% endblock %}
